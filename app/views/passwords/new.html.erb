<div class="content_details bg_change">
  <div class="top_curv">
    <div class="bottom_curv">  
      <div class="admin_panel">
        <h2>Forgot your password?</h2>

        <% form_for resource_name, resource, :url => password_path(resource_name) do |f| %>
          <%= f.error_messages %>

          <p><%= f.label :email %></p>
          <div class="input_bg">
            <p><%= f.text_field :email %></p>
          </div>
          
          <div class="button">
            <p><%= f.submit "Submit",:class=>"login_btn"%></p>
          </div>
        <% end %>

        <%= render :partial => "shared/devise_links" %>
      </div>
    </div>
  </div>
</div>