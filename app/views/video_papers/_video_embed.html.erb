<% unless @video.nil? %>
  <% if @video.private? && !owner? %>
    This video is private.
  <% else %>
    <% if !@video.processed? %>
      <div id="transcoding_status"></div>
      <script>
        $j.ajax("<%= transcoding_status_video_paper_url :format => :js %>")
      </script>
    <% end %>
    <% signed_url = @video.generate_signed_url() %>
    <div id="video_player_container" style="display: none"></div>
    <script>
      VPB.show_video_player = function (signed_url) {
        $j("#video_player_container").html([
          '<video id="video_player" class="video-js vjs-default-skin" controls preload="auto" width="360" height="202" poster="">',
            '<source src="', signed_url, '" type="video/mp4" />',
          '</video>'
        ].join(''));
        videojs("video_player", {}, function() {
          $j("#transcoding_status").hide();
          $j("#video_player_container").show();
        });
      };
      <% if @video.processed && signed_url %>
        VPB.show_video_player("<%= signed_url %>");
      <% end %>
    </script>
    <noscript>Please enable Javascript.</noscript>
  <% end %>
<% end %>
