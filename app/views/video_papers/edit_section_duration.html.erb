<div class="content_details">
  <div class="top_curv">
    <div class="bottom_curv">
      <div class="intirior_details">
<h1><%=h @video_paper.title -%></h1>
<h2>Produced by <%=h @video_paper.user.name%>, <%= @video_paper.format_created_date %></h2>
<h3>Set start and stop times for <%= @section.title%></h3>
<script type="text/javascript">
  VPB.SectionTimeData = 
  {
    length:<%= @video_paper.video.duration.nil? ? 0 : @video_paper.video.duration-%>,
    start:<%= @section.video_start_time.nil?    ? 0 : @section.video_start_time-%>,
    stop:<%= @section.video_stop_time.nil?      ? 0 : @section.video_stop_time-%>
  
  };
  
  // TODO: see how else we can make the player pause while seeking.
  function jsCallbackReady () {
		$j('#kplayer').get(0).sendNotification('doPause');
  }
</script>
<%= render :partial=> 'video_embed'%>
<% if @video_paper.video%>
<% end %>
<div id="duration_slider"></div>
<fieldset>
<% form_for @section, :url=>'update_section_duration' do |f| %>
  <%= f.hidden_field :title %><%= f.hidden_field :id%>
  <p><%= f.label :video_start_time, "Start Time (HH:MM:SS)"%>
  <%= f.text_field :video_start_time,:value=> @section.to_timestamp(@section.video_start_time)  %></p>
  <p><%= f.label :video_stop_time, "Stop Time (HH:MM:SS)"%>
  <%= f.text_field :video_stop_time,:value=> @section.to_timestamp(@section.video_stop_time)  %></p>
  <div class="button">
    <%= f.submit "Save timings",:class=>'upload_btn'%>
  </div>
<% end %>
</fieldset>
</div>
</div>
</div>
</div>