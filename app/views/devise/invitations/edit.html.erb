<div class="content_details bg_change">
  <div class="top_curv">
    <div class="bottom_curv">
      <div class="admin_panel">
        <h2>Set your password</h2>

        <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :patch } do |f| %>
          <%= render partial: "devise/shared/error_messages" %>
          <%= f.hidden_field :invitation_token %>

          <p><%= f.label :password %></p>
          <div class="input_bg">
            <p><%= f.password_field :password %></p>
          </div>

          <p><%= f.label :password_confirmation %></p>
          <div class="input_bg">
            <p><%= f.password_field :password_confirmation %></p>
          </div>

          <div class="button">
            <p><%= f.submit "Submit",:class=>"login_btn" %></p>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>